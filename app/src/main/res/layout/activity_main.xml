<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">



    <GridLayout
        android:paddingTop="30dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <include android:id="@+id/adult_count" layout="@layout/people_count"
            android:layout_column="0" android:layout_height="wrap_content" android:layout_width="0dp" android:layout_columnWeight="1"/>

        <include android:id="@+id/children_count" layout="@layout/people_count"
            android:layout_column="1" android:layout_height="wrap_content" android:layout_width="0dp" android:layout_columnWeight="1"/>

        <TextView
            android:id="@+id/adult_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"

            android:layout_gravity="center"
            android:text="@string/adult_lbl"
            android:textColor="#0E0E0E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:text="@string/children_lbl"
            android:textColor="#0E0E0E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <include android:id="@+id/startDatePicker" layout="@layout/date_picker"
            android:layout_columnSpan="2" android:layout_row="3" android:layout_height="wrap_content" android:layout_width="0dp" android:layout_columnWeight="1" android:layout_marginBottom="30dp" android:layout_marginTop="30dp"/>

        <include android:id="@+id/endDatePicker" layout="@layout/date_picker"
            android:layout_columnSpan="2" android:layout_row="4" android:layout_height="wrap_content" android:layout_width="0dp" android:layout_columnWeight="1" android:layout_marginBottom="30dp"/>


    </GridLayout>




</layout>