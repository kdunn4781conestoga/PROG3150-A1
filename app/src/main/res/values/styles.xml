<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardView.Custom" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardForegroundColor">?attr/colorPrimary</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <!-- Style for items in location list -->
    <style name="CardView.Custom.LocationItem" parent="CardView.Custom">
        <item name="cardBackgroundColor">@color/location_card_color</item>
        <item name="cardForegroundColor">?colorOnSecondary</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="Toolbar.Custom" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ImageButton.Refresh" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_weight">1</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@null</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/baseline_refresh_24</item>
    </style>
</resources>